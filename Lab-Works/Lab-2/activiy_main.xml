<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:textColor="@color/black"
        android:gravity="center_vertical|right"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:textSize="80sp"
        android:singleLine="true"
        android:text=" " />
    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="#858585"
        android:gravity="center_vertical|right"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:textSize="60sp"
        android:singleLine="true"
        android:text=" " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_7"
                style="@style/style1"
                android:text="7" />
            <TextView
                android:id="@+id/btn_4"
                style="@style/style1"
                android:text="4" />
            <TextView
                android:id="@+id/btn_1"
                style="@style/style1"
                android:text="1" />
            <TextView
                android:id="@+id/btn_0"
                style="@style/style1"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_8"
                style="@style/style1"
                android:text="8" />
            <TextView
                android:id="@+id/btn_5"
                style="@style/style1"
                android:text="5" />
            <TextView
                android:id="@+id/btn_2"
                style="@style/style1"
                android:text="2" />
            <TextView
                android:id="@+id/btn_dot"
                style="@style/style1"
                android:text=","
/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_9"
                style="@style/style1"
                android:text="9" />
            <TextView
                android:id="@+id/btn_6"
                style="@style/style1"
                android:text="6" />
            <TextView
                android:id="@+id/btn_3"
                style="@style/style1"
                android:text="3" />
            <TextView
                android:id="@+id/btn_equal"
                style="@style/style1"
                android:text="=" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_back"
                style="@style/style2"
                android:text="AC" />
            <TextView
                android:id="@+id/btn_divide"
                style="@style/style2"
                android:text="/" />
            <TextView
                android:id="@+id/btn_multiply"
                style="@style/style2"
                android:text="*" />
            <TextView
                android:id="@+id/btn_minus"
                style="@style/style2"
                android:text="-"
                />
            <TextView
                android:id="@+id/btn_plus"
                style="@style/style2"
                android:text="+" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
